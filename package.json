{
  "name": "konus",
  "version": "1.0.0",
  "description": "Voice to Text application using OpenAI Whisper API",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@jitsi/robotjs": "^0.6.13",
    "auto-launch": "^5.0.6",
    "electron-store": "^8.1.0",
    "openai": "^4.24.0",
    "uiohook-napi": "^1.5.4"
  },
  "build": {
    "appId": "com.konus.app",
    "productName": "Konu≈ü",
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/icons",
        "to": "icons"
      }
    ]
  }
}
